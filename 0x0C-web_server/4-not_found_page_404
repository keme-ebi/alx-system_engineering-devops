#!/usr/bin/env bash
# configured nginx server to have a custom 404 page
sudo apt update
sudo apt install -y nginx

sudo sed -i "/server_name _;/a \\\n\terror_page 404 /custom_404.html;\n\n\tlocation = /custom_404.html {\n\t\tinternal;\n\t\treturn 404 \"Ceci n'est pas une page\";\n\t}" /etc/nginx/sites-available/default

sudo service nginx restart
